---
// Este es un archivo .astro
export interface Props {
    href: string;
}

const { href } = Astro.props;
---
<a href={href} target="_blank" rel="noopener noreferrer" class="github-button">
    <svg
        xmlns="http://www.w3.org/2000/svg"
        viewBox="0 0 24 24"
        aria-hidden="true"
        class="github-icon"
    >
        <path
            fill="currentColor"
            d="M12 2C6.48 2 2 6.48 2 12c0 4.42 2.87 8.17 6.84 9.49.5.09.66-.22.66-.48 0-.24-.01-.86-.01-1.69-2.78.6-3.37-1.34-3.37-1.34-.45-1.16-1.11-1.47-1.11-1.47-.91-.63.07-.62.07-.62 1.01.07 1.54 1.04 1.54 1.04.9 1.54 2.37 1.09 2.95.83.09-.65.35-1.09.63-1.34-2.22-.25-4.56-1.11-4.56-4.93 0-1.09.39-1.98 1.03-2.68-.1-.25-.45-1.27.1-2.65 0 0 .84-.27 2.75 1.02a9.58 9.58 0 012.5-.34c.85.01 1.7.12 2.5.34 1.91-1.29 2.75-1.02 2.75-1.02.55 1.38.2 2.4.1 2.65.64.7 1.03 1.59 1.03 2.68 0 3.83-2.34 4.68-4.57 4.93.36.31.68.92.68 1.85 0 1.34-.01 2.42-.01 2.75 0 .26.16.58.67.48A10.004 10.004 0 0022 12c0-5.52-4.48-10-10-10z"
        />
    </svg>
    Ver en Github
</a>

<style>
    .github-icon {
        width: 2rem; /* Tamaño del icono ajustado */
        height: 2rem;
        flex-shrink: 0;
    }
    .github-button {
        display: inline-flex;
        align-items: center;
        justify-content: center;
        gap: 0.5rem;
        padding: 0.5rem 1rem;
        background-color: #3f3f3f; /* Relleno gris */
        color: #ffffff!important; /* Letras e ícono blancos */
        border: 1px solid #3f3f3f; /* Borde gris */
        border-radius: 8px;
        font-size: var(--text-md); /* Corrige aquí si es necesario */
        font-weight: bold;
        line-height: 1.35;
        white-space: nowrap;
        cursor: pointer;
        text-decoration: none;
        transition: background-color 0.2s, color 0.2s;
        
    }


    .github-button:hover {
        background-color: #505050; 
        color: #e0e0e0;
        text-decoration: none;
    } 
    

     .github-button:focus {
        outline: 2px solid #d1d1d1;
        outline-offset: 2px;
        text-decoration: none;
    } 
</style>
